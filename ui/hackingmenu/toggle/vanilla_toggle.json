{
    "namespace": "vanilla_toggle",
    "mod_toggle@common.toggle": {
        "$checked_control": "vanilla_toggle.toggle",
        "$checked_hover_control": "vanilla_toggle.toggle_hover",
        "$unchecked_control": "vanilla_toggle.toggle_unchecked",
        "$unchecked_hover_control": "vanilla_toggle.toggle_unchecked_hover",
        "button_mappings": "$button_mappings",
        "toggle_default_state": "$toggle_tags",
        "$button_mappings|default": [
            {
                "from_button_id": "button.menu_select",
                "mapping_type": "pressed",
                "to_button_id": "button.menu_select"
            },
            {
                "from_button_id": "button.menu_ok",
                "mapping_type": "focused",
                "to_button_id": "button.menu_ok"
            },
            {
                "from_button_id": "button.menu_left",
                "ignored": "(not $enable_directional_toggling)",
                "input_mode_condition": "gamepad_and_not_gaze",
                "mapping_type": "pressed",
                "to_button_id": "$toggle_off_button"
            },
            {
                "from_button_id": "button.menu_right",
                "ignored": "(not $enable_directional_toggling)",
                "input_mode_condition": "gamepad_and_not_gaze",
                "mapping_type": "pressed",
                "to_button_id": "$toggle_on_button"
            },
            {
                "ignored": "(not $enable_hover_event_mapping)",
                "mapping_type": "pressed",
                "to_button_id": "$toggle_hover_event_mapping"
            }
        ]
    },
    "toggle@vanilla_toggle.panel": {
        "type": "image",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 1,
        "alpha": 0.5,
        "texture": "textures/hackingmenu/toggles/vanilla/button_pressed"
    },
    "toggle_hover@vanilla_toggle.panel": {
        "type": "image",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 1,
        "alpha": 0.5,
        "texture": "textures/hackingmenu/toggles/vanilla/button_pressed"
    },
    "toggle_unchecked@vanilla_toggle.panel": {
        "type": "image",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 1,
        "alpha": 0.5,
        "texture": "textures/hackingmenu/toggles/vanilla/button_default"
    },
    "toggle_unchecked_hover@vanilla_toggle.panel": {
        "type": "image",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 1,
        "alpha": 0.5,
        "texture": "textures/hackingmenu/toggles/vanilla/button_hover"
    },
    "vanilla_toggle_base": {
        "type": "panel",
        "layer": 3,
        "$toggle_view_binding_name|default": "this_toggle",
        "$template_toggle|default": "vanilla_toggle.mod_toggle",
        "controls": [
            {
                "$toggle_view_binding_name@$template_toggle": {}
            }
        ]
    },
    "panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 30,
        "$button_content|default": "vanilla_toggle.button_text",
        "controls": [
            {
                "button_content@$button_content": {
                    "layer": 5
                }
            }
        ]
    },
    "button_text": {
        "type": "label",
        "size": [
            "default",
            "default"
        ],
        "color": [
            0.75,
            0.75,
            0.75
        ],
        "font_type": "smooth",
        "text": "$button_text",
        "bindings": [
            {
                "binding_name": "$button_text"
            }
        ]
    }
}