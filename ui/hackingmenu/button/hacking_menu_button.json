{
    "namespace": "hacking_button",
    "main_button@common.button": {
        "locked_control": "locked",
        "controls": [
            {
                "default@hacking_button.default": {
                    "$button_texture": "textures/hackingmenu/buttons/invis",
                    "alpha": 0.0
                }
            },
            {
                "hover@hacking_button.hover": {
                    "$button_texture": "textures/hackingmenu/buttons/invis",
                    "alpha": 0.0
                }
            },
            {
                "pressed@hacking_button.pressed": {
                    "$button_texture": "textures/hackingmenu/buttons/invis",
                    "alpha": 0.0
                }
            },
            {
                "locked@hacking_button.locked": {
                    "$button_texture": "textures/hackingmenu/buttons/invis",
                    "alpha": 0.0
                }
            }
        ]
    },
    "default@hacking_button.button_panel": {
        "$has_hover_text": false,
        "$text_color": [
            1,
            1,
            1
        ]
    },
    "hover@hacking_button.button_panel": {
        "$has_hover_text": true,
        "$text_color": [
            1,
            1,
            1
        ]
    },
    "pressed@hacking_button.button_panel": {
        "$has_hover_text": false,
        "$text_color": [
            1,
            1,
            1
        ]
    },
    "button_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%"
        ],
        "layer": 10,
        "$button_content|default": "hacking_button.button_label",
        "controls": [
            {
                "button_content@$button_content": {
                    "layer": 10
                }
            },
            {
                "button_texture@$button_texture": {
                    "layer": 1
                }
            }
        ]
    },
    "button_label": {
        "type": "label",
        "shadow": true,
        "font_scale_factor": 1,
        "font_type": "$font_type",
        "size": [
            "default",
            "default"
        ],
        "color": "$text_color",
        "$text_color|default": [
            1,
            1,
            1
        ],
        "text": "$button_text",
        "bindings": [
            {
                "binding_name": "$button_text"
            },
            {
              "binding_name": "$font_type"
            }
        ]
    }
  }